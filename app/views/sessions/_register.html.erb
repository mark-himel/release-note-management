<%= authorization_modal 'register', 'Register', '', link_css_class: 'modal__button', modal_content_class: 'modal__content'  do %>
  <%= simple_form_for :user, url: users_path, method: :post do |f| %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password, as: :password %>
    <div class="text-center">
      <%= f.button :submit, t('users.register'), class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>
